.oth {
  width: 100%;
}
.oth swiper {
  width: 100vw;
  height: 100vh;
}
.oth swiper swiper-item {
  width: 100vw;
  height: 100vh;
  background-color: black;
}
.oth swiper swiper-item video,
.oth swiper swiper-item .vimg {
  position: relative;
  top: 28%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  width: 100vw;
  max-height: 100%;
}
.oth swiper swiper-item .vimg {
  -webkit-transform: translate(-50%, 35%);
          transform: translate(-50%, 35%);
}
.oth swiper swiper-item .changeTop {
  top: 20%;
}
.oth swiper swiper-item .intro {
  width: 100%;
  position: absolute;
  bottom: 32%;
}
.oth swiper swiper-item .intro view {
  width: 100vw;
  color: #FFFFFF;
  height: 60rpx;
  margin-top: 20rpx;
}
.oth swiper swiper-item .intro .singer text {
  height: 60rpx;
  line-height: 60rpx;
  display: block;
  float: left;
  margin-left: 20rpx;
  font-size: 39rpx;
}
.oth swiper swiper-item .intro .singer text:nth-child(1) {
  margin-left: 1%;
}
.oth swiper swiper-item .intro .singer text:nth-child(2) {
  margin-left: 80rpx;
}
.oth swiper swiper-item .intro .name text {
  display: block;
  float: left;
  margin-left: 1%;
  font-size: 33rpx;
}
.oth swiper swiper-item .intro .other text {
  display: block;
  float: left;
  margin-left: 20rpx;
  font-size: 30rpx;
}
.oth swiper swiper-item .intro .other text:nth-child(1) {
  margin-left: 1%;
}
.oth swiper swiper-item .intro .other text:nth-child(2) {
  margin-left: 80rpx;
}
.oth swiper swiper-item .icon {
  z-index: 0;
  width: 80rpx;
  display: flex;
  position: absolute;
  right: 4%;
  top: 48%;
  flex-direction: column;
  color: white;
}
.oth swiper swiper-item .icon text {
  font-size: 70rpx;
}
.oth swiper swiper-item scroll-view {
  z-index: 10;
  position: absolute;
  width: 100vw;
  height: 59%;
  top: 40%;
  background-color: white;
}
.oth swiper swiper-item scroll-view .comm {
  width: 100%;
}
.oth swiper swiper-item scroll-view .comm .ti,
.oth swiper swiper-item scroll-view .comm .no {
  text-align: center;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 35rpx;
  background-color: #BBFFFF;
}
.oth swiper swiper-item scroll-view .close {
  position: fixed;
  right: 25rpx;
  top: 47%;
  width: 80rpx;
  height: 80rpx;
}
.oth swiper swiper-item scroll-view .close text {
  display: block;
  width: 100%;
  height: 100%;
  font-size: 60rpx;
}

